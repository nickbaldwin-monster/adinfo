{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*",
        "src/custom.d.ts"
    ]
}